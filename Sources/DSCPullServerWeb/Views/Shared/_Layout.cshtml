<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta name="description" content="@ViewBag.Description" />
    <meta name="author" content="Claudio Spizzi" />

    <title>@ViewBag.Title - @ViewBag.Name</title>

    <!-- Bootstrap Styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

    <!-- Font-Awesome Styles -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>

    <div class="container">

        <!-- Navbar -->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink((string) ViewBag.Title, "Home", "Web", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="@Html.IsSelected("Web", "Nodes"         )">@Html.ActionLink("Nodes",          "Nodes",          "Web")</li>
                        <li class="@Html.IsSelected("Web", "Reports"       )">@Html.ActionLink("Reports",        "Reports",        "Web")</li>
                        <li class="@Html.IsSelected("Web", "Configurations")">@Html.ActionLink("Configurations", "Configurations", "Web")</li>
                        <li class="@Html.IsSelected("Web", "Modules"       )">@Html.ActionLink("Modules",        "Modules",        "Web")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="@Html.IsSelected("Web", "Cmdlets"       )">@Html.ActionLink("Cmdlets",        "Cmdlets",        "Web")</li>
                        <li class="@Html.IsSelected("Web", "RestApi"       )">@Html.ActionLink("REST API",       "RestApi",        "Web")</li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Modal -->
        <div id="modal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="modal-title">Header</h4>
                    </div>
                    <div class="modal-body">
                        <p id="modal-text">Text</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Body -->
        @RenderBody()

        <!-- Footer -->
        <hr />
        <footer class="footer">
            <div class="row">
                <div class="col-md-6">
                    <p><small>Open-source on <a href="https://github.com/claudiospizzi/DSCPullServerWeb">GitHub</a> by <a href="https://github.com/claudiospizzi">Claudio Spizzi</a>. Licensed under <a href="https://github.com/claudiospizzi/DSCPullServerWeb/blob/dev/LICENSE">MIT license</a>.</small></p>
                </div>
                <div class="col-md-6" style="text-align: right;">
                    <p><small>Pull Server Uri: http://localhost:8080</small></p>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-dateFormat-1.0.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="~/Scripts/site.js"></script>
    <script>
        var path = window.location.pathname.toString()
        if (path.indexOf("/Web/Nodes") == 0) { uiUpdateTable('nodes'); }
        if (path.indexOf("/Web/Reports") == 0) { uiUpdateTable('reports'); }
        if (path.indexOf("/Web/Configurations") == 0) { uiUpdateTable('configurations'); }
        if (path.indexOf("/Web/Modules") == 0) { uiUpdateTable('modules'); }
    </script>
</body>
</html>
